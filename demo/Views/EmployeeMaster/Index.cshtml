@model IEnumerable<demo.Models.employeeMaster>

@{
    ViewBag.Title = "Index";
}

@*<link href="../Content/StyleSheet1.css" rel="stylesheet" />*@

<h2>Add New Employee</h2>

<p>
    <br />
    @Html.ActionLink("Add Employee", "Add", "", new { @class = "btn btn-info" })
</p>

<table class="table table-responsive table-bordered table-striped" id="Table1">
    <thead>
        <tr>
            <th>
                Employee Name
            </th>
            <th>
                Position
            </th>
            <th>
                Salary
            </th>
            <th>
                Contact
            </th>
            <th>
                Address
            </th>
            <th>
                EmailId
            </th>
            <th>
                Department Id
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.deptId)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeId }, new { @class = "btn btn-success" })

                    @Html.ActionLink("Delete", "DeleteData", new { id = item.EmployeeId }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you want to delete this data?');" })
                </td>
            </tr>
        }
        
    </tbody>

</table>

<script type="text/javascript">
    $(document).ready(function () {
        $('#Table1').DataTable();
    });

</script>


